<% if user.paired_with?(@user) %>
    <div class="gray_user">
      <div><%= image_tag(user.photo_name) %></div>
      <%= user.name %>
      <br>
      <%= user.pairing_date(@user).strftime("%-m/%-d/%Y") %>
    </div>
<% else %>
    <div class="user">
      <div><%= link_to image_tag(user.photo_name), new_user_pairing_path(user), class: 'user_image' %></div>
      <%= user.name %>
    </div>
<% end %>
